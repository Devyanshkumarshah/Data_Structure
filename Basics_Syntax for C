# WAP that prints Namestey if user is indian and Bonjour if the user is French

#include<stdio.h>


void name();
void bon();


int main(){
   
   printf("enter f for french and i for indian");
   char ch;
   scanf("%s", &ch);

   if(ch == 'f'){
    bon();
   }

   if(ch == 'i'){
    name();
   }

   else
   {
    printf("Enter a valid option");

   }

   return 0;
}

void name()
{
    printf("namestey");
}

void bon()
{
    printf("Bonjour");
}


