#CONDITIONAL STATEMENT

#include<stdio.h>
int main()
{
    int age;
    printf("enter the age : ");
    scanf("%d", &age);

    age >= 18 ? printf("adult \n") : printf("not adult \n") ;  //ternary contitional statement

    return 0;
}

